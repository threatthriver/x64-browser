{
  "name": "x64-browser",
  "private": true,
  "version": "0.1.0",
  "description": "A high-performance, privacy-focused web browser for macOS and Windows built with Electron",
  "main": "main.cjs",
  "author": "X64 Browser Team",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && cp electron/main.js . && electron-builder",
    "electron:start": "electron dist-electron"
  },
  "dependencies": {
    "lucide-react": "^0.460.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.2.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.x64browser.app",
    "productName": "X64 Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.internet",
      "target": ["dmg", "zip"],
      "icon": "src-tauri/icons/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src-tauri/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  }
}
