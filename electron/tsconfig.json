{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist-electron",
    "rootDir": "electron",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["electron/**/*"]
}
